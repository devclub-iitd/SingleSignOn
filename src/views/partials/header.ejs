                            $('#headerLoginBtn').css('display', 'none');
                        }
                        if (window.location.href.indexOf('login') > 0) {
                            const query = window.location.search;
                            $('#headerLoginBtn').attr(
                                'href',
                                `/user/login${query}`
                            );
                        }
                    };
                    getUserDetails(userDetailSuccess, userDetailFailure);
                });
            </script>
            <a href="/user/login" id="headerLoginBtn" style="display: none;">
